			<% })} %>

	

	</div>
</div>
</div>


<!--third segment-->
<div class="col-md-4" style="border-left:3px solid black;height:599px">

<div style="height:100%;overflow:scroll;position:fixed;padding-bottom: 40px">
<div class="sticky-top" style="background: black;color:white;height:40px;"><h3>All Post </h3>
	
<button type="button" class="btn btn-primary"id="post">Post a Status</button>


	<div id="poststatus"  >
	<%- include ./addstatus%>	
	</div>
  <button type="button" class="btn btn-primary" id="cancels">Cancel</button>
   
		</div>
	
					<% if (data) { %>
		<% 
		data.forEach(u=>{ %>


 <div class="card">
        <div class="card-body">
          <h4 class="card-title"><%= u.title %></h4>
          <div class="card-subtitle text-muted mb-2">
          <%= u.time.toLocaleDateString() %>
          
          </div>
          
          
          <div class="card-text mb-2"> <%= u.posts %> </div>
           <div class="text-muted mb-2">
    by:<%= u.username %>
      </div>         

          <a href="" class="btn btn-primary btn-sm">Read More</a>
          <a href="/editpost/<%= u._id %>" class="btn btn-info btn-sm">comment</a>
          <a href="/deletepost/<%= u._id %>"   class="d-inline btn btn-danger btn-sm">Like</a>
       
        
			
		
		    </div>
		  </div>

			<% })} %>

	

	</div>
</div>
</div>
<div class="row">	
<div style="background: black;height:40px;width:100%;" class="col-md-12 fixed-bottom">	
			<a href="/logout" class="btn btn-success">Logout</a>
		</div>		

</div>	
	
<script type="text/javascript">
	
$(function(){
	

$("#segment2").scroll(function(){
  $("#stic").show(10);
});



	var status = 	$("#poststatus")
	var post = 	$("#post")
	$("#poststatus").hide();
	$("#cancels").hide();

	$("#post").click(function(){
		$(this).hide(130);
		status.show(700);
		$("#cancels").show();})
		
		$("form").submit(function(){

    status.hide(500);
    post.show(800);

		
	})
		$("#cancels").click(function(){
		$(this).hide(330);
		status.hide(800);
		$("#post").show(600);})
})

</script>
